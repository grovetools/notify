{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/grovetools/notify/pkg/config/notifications-config",
  "$defs": {
    "NtfyConfig": {
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ntfy.sh push notifications",
          "default": false,
          "x-important": true,
          "x-layer": "global",
          "x-priority": "70"
        },
        "topic": {
          "type": "string",
          "description": "ntfy.sh topic name for notifications",
          "x-important": true,
          "x-layer": "global",
          "x-priority": "71"
        },
        "url": {
          "type": "string",
          "description": "ntfy.sh server URL",
          "default": "https://ntfy.sh",
          "x-important": true,
          "x-layer": "global",
          "x-priority": "72"
        }
      },
      "type": "object",
      "required": [
        "enabled",
        "topic",
        "url"
      ]
    },
    "SystemConfig": {
      "properties": {
        "levels": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Notification levels that trigger system notifications",
          "x-layer": "global",
          "x-priority": "73"
        }
      },
      "type": "object",
      "required": [
        "levels"
      ]
    }
  },
  "properties": {
    "ntfy": {
      "$ref": "#/$defs/NtfyConfig",
      "description": "ntfy.sh push notification settings",
      "x-layer": "global",
      "x-priority": "70"
    },
    "system": {
      "$ref": "#/$defs/SystemConfig",
      "description": "Native system notification settings",
      "x-layer": "global",
      "x-priority": "71"
    }
  },
  "type": "object",
  "title": "Grove Notifications Configuration",
  "description": "Schema for the 'notifications' extension in grove.yml."
}